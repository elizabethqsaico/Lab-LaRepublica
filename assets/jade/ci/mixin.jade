//- mixin para titular en index
mixin titular-principal(titular)
	h1.t-= titular
//-mixin para todas las paginas solo enviando la url
mixin imagen(url)
	img.img-responsive(src= url)
//- mixin para crear una columna con 
mixin background-image(col,url,noticia)
	div(class= col)
		h4= noticia
//- mixin para divison-seccion
mixin divisor-seccion(titulo)
	br
	h3.text-center= titulo
//- mixin para home-columnista
mixin home-columnista(url,columnista,titulo)
	li
		.div.text-center
			image.img-responsive(src= url)
			p= columnista
			h5= titulo
